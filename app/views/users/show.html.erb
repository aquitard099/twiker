	<section class="tweets">
		<article class="tweets_info">
			<ul>
				<li><a href="#">Tweets<span class="count"><%= @tweets.count %></span></a></li><!--
				--><li><a href="#">Photos/Videos<span class="count"><%= @tweets.count %></span></a></li><!--
