				--><li><a href="#">Followers<span class="count"><%= @tweets.count %></span></a></li>
			</ul>
		</article>

		<article class="user_tweets">
		  <% @tweets.order('created_at DESC').each do |tweet| %>
			<div class="tweet">
				<div class="image">
					<img src="http://lorempixel.com/output/business-q-c-640-480-2.jpg">
				</div><!--
				--><div class="content">
               <div>
               	<h3><%= tweet.user.name %> <span>@<%= tweet.user.username %></span></h3>
               	<span class="time"><%= distance_of_time_in_words(tweet.created_at, Time.now) %></span>
               </div>
               <div class="text">
               	<p><%= tweet.content %></p>
               </div>
               <div class="actions">
               	<i class="fa fa-share"></i>
               	<i class="fa fa-star"></i>
               	<i class="fa fa-refresh"></i>
               	<%= link_to "<i class='fa fa-trash'></i>".html_safe, tweet_path(tweet), method: :delete, data: {confirm: "Are you sure?"}, :class => "trash" %>
               	<i class="fa fa-expand expand"></i>
               </div>
			   </div>
			</div>
		  <% end %>
		</article>
	</section>
      
